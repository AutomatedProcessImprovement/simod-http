SIMOD_HTTP_HOST=localhost
SIMOD_HTTP_PORT=8000
SIMOD_HTTP_SCHEME=http

SIMOD_STORAGE_PATH=./tmp
SIMOD_STORAGE_DISCOVERY_EXPIRATION_TIMEDELTA=604800
SIMOD_STORAGE_CLEANING_TIMEDELTA=60

SIMOD_LOGGING_LEVEL=info
SIMOD_LOGGING_FORMAT="%(asctime)s \t %(name)s \t %(levelname)s \t %(message)s"

SIMOD_BROKER_URL=amqp://guest:guest@localhost:5672
SIMOD_BROKER_EXCHANGE_NAME=simod
SIMOD_BROKER_PENDING_ROUTING_KEY=discoveries.status.pending

SIMOD_MONGO_URL=mongodb://localhost:27017/simod
